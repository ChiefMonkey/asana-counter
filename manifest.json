{
    "manifest_version":2,
    "name": "Asana Counter Extention",
    "description": "Asana tasks and points  counter on a board and list view. Points must to be a custom Asana drop-down property with numbers only and with grey color.",
    "icons": {"128": "icon-128.png" },
    "browser_action": {
        "default_icon": {                    
          
          "16": "icon-16.png",           
          "32": "icon-32.png"
             
        },
        "default_title": "Works on Asana website"
      },
    "version": "0.1",
    "content_scripts":[
        {
            "matches": [
                "https://app.asana.com/*"
            ],
            "js": ["script.js"]
        }
    ]
}